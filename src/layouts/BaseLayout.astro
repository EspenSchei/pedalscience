---
import "../styles/global.css";
import Breadcrumb from "../components/Breadcrumb.astro";
import Button from "../components/Button.astro";

const {
    title = "Pedal Science",
    description = "Free cycling tools and training guides for recreational road cyclists",
} = Astro.props;

const year = new Date().getFullYear();
const pathname = Astro.url.pathname;

// Build the page title
const pageTitle = title === "Pedal Science"
    ? "Pedal Science - Free Cycling Tools & Training Guides"
    : `${title} | Pedal Science`;

/* -------------------------------------------------------
   BREADCRUMB LOGIC
------------------------------------------------------- */

let breadcrumbItems = null;
let isToolDetail = false;

if (pathname.startsWith("/tools/") && pathname !== "/tools") {
    isToolDetail = true;
    breadcrumbItems = [
        { label: "Home", href: "/" },
        { label: "Tools", href: "/tools" },
        { label: title },
    ];
}

if (pathname.startsWith("/training/") && pathname !== "/training") {
    breadcrumbItems = [
        { label: "Home", href: "/" },
        { label: "Training", href: "/training" },
        { label: title },
    ];
}

/* -------------------------------------------------------
   SEO: Schema.org BreadcrumbList
------------------------------------------------------- */

let breadcrumbJson = null;

if (breadcrumbItems) {
    const origin = Astro.url.origin ?? "";
    breadcrumbJson = {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        itemListElement: breadcrumbItems.map((item, index) => ({
            "@type": "ListItem",
            position: index + 1,
            name: item.label,
            item: item.href ? `${origin}${item.href}` : Astro.url.href,
        })),
    };
}
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-GC1DZTCCPP" />
    <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-GC1DZTCCPP');
    </script>
    <meta charset="utf-8" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://pedalscience.com/og-image.png" />
    <meta property="og:site_name" content="Pedal Science" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url.href} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://pedalscience.com/og-image.png" />

    <!-- Additional SEO -->
    <meta name="author" content="Pedal Science" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Theme color -->
    <meta name="theme-color" content="#0f172a" />

    {breadcrumbJson && (
        <script type="application/ld+json" set:html={JSON.stringify(breadcrumbJson)} />
    )}
</head>

<body class="min-h-screen bg-slate-50 text-slate-900">
<!-- HEADER / NAV -->
<header
        class="sticky top-0 z-20 border-b border-slate-200 bg-white/90 backdrop-blur shadow-sm"
>
    <div
            class="mx-auto flex max-w-5xl items-center justify-between px-4 py-3 sm:px-6"
    >
        <a
                href="/"
                class="inline-flex items-center rounded-full border border-slate-300 bg-white px-3 py-1 text-xs font-semibold uppercase tracking-[0.2em] text-slate-700"
        >
            Pedal Science
        </a>

        <nav class="flex gap-2 text-sm">
            <a
                    href="/"
                    class="rounded-full px-3 py-1 text-slate-600 hover:bg-slate-100 hover:text-slate-900"
            >
                Home
            </a>
            <a
                    href="/tools"
                    class="rounded-full px-3 py-1 text-slate-600 hover:bg-slate-100 hover:text-slate-900"
            >
                Tools
            </a>
            <a
                    href="/training"
                    class="rounded-full px-3 py-1 text-slate-600 hover:bg-slate-100 hover:text-slate-900"
            >
                Training
            </a>
        </nav>
    </div>
</header>

<!-- CONTENT -->
<main class="py-8">
    <div class="mx-auto max-w-5xl px-4 sm:px-6">
        {breadcrumbItems && (
                <>
                    <Breadcrumb items={breadcrumbItems} />
                    {isToolDetail && (
                            <div class="mb-4">
                                <Button
                                        href="/tools"
                                        variant="ghost"
                                        class="px-3 py-1 text-xs"
                                >
                                    ‚Üê Back to tools
                                </Button>
                            </div>
                    )}
                </>
        )}

        <slot />
    </div>
</main>

<!-- FOOTER -->
<footer
        class="border-t border-slate-200 bg-slate-50 text-xs text-slate-500"
>
    <div class="mx-auto max-w-5xl px-4 py-4 sm:px-6">
