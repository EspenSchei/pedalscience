---
import "../styles/global.css";
import Breadcrumb from "../components/Breadcrumb.astro";
import Button from "../components/Button.astro";

const {
    title = "Landevei",
    description = "Verkt√∏y og kunnskap for landeveissyklister",
} = Astro.props;

const year = new Date().getFullYear();
const pathname = Astro.url.pathname;

/* -------------------------------------------------------
   BREADCRUMB LOGIKK
------------------------------------------------------- */

let breadcrumbItems = null;
let isToolDetail = false;

// Verkt√∏y-detaljsider: /verktoy/...
if (pathname.startsWith("/verktoy/") && pathname !== "/verktoy") {
    isToolDetail = true;
    breadcrumbItems = [
        { label: "Hjem", href: "/" },
        { label: "Verkt√∏y", href: "/verktoy" },
        { label: title },
    ];
}

// Treningsartikler: /trening/...
if (pathname.startsWith("/trening/") && pathname !== "/trening") {
    breadcrumbItems = [
        { label: "Hjem", href: "/" },
        { label: "Trening", href: "/trening" },
        { label: title },
    ];
}

/* -------------------------------------------------------
   SEO: Schema.org BreadcrumbList
------------------------------------------------------- */

let breadcrumbJson = null;

if (breadcrumbItems) {
    const origin = Astro.url.origin ?? "";
    breadcrumbJson = {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        itemListElement: breadcrumbItems.map((item, index) => ({
            "@type": "ListItem",
            position: index + 1,
            name: item.label,
            item: item.href ? `${origin}${item.href}` : Astro.url.href,
        })),
    };
}
---

<!DOCTYPE html>
<html lang="no" class="scroll-smooth">
<head>
    <meta charset="utf-8" />
    <title>{title} | Landevei</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {breadcrumbJson && (
        <script type="application/ld+json">
        {JSON.stringify(breadcrumbJson)}
      </script>
    )}
</head>

<body
