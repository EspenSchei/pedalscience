---
const { title, class: extraClass = "" } = Astro.props as {
    title?: string;
    class?: string;
};
---

<section class={`mt-6 ${extraClass}`}>
    {title && (
            <h2 class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-600">
                {title}
            </h2>
    )}
    <div class={title ? "mt-3" : ""}>
        <slot />
    </div>
</section>