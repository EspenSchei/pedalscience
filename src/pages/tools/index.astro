---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";
import Button from "../../components/Button.astro";
import Section from "../../components/Section.astro";

const title = "Tools";
const description =
    "Practical calculators for recreational road cyclists. Start with FTP, and use the other tools to plan climbs, speed, and nutrition.";
---

<BaseLayout {title} {description}>
    <header class="mb-8">
        <h1 class="text-3xl font-semibold tracking-tight text-slate-900 sm:text-4xl">
            Cycling Tools
        </h1>
        <p class="mt-3 max-w-2xl text-sm text-slate-600">
            Practical calculators for recreational road cyclists. Start with FTP, and use the other
            tools to plan climbs, speed, and nutrition.
        </p>
    </header>

    <Section title="Calculators">
        <div class="grid gap-4 md:grid-cols-2">
            <Card title="FTP Calculator">
                <p class="mt-1 text-xs text-slate-600">
                    Enter your FTP and get training zones in watts and percentage. Perfect starting point for
                    structured training.
                </p>
                <div class="mt-4">
                    <Button href="/tools/ftp-calculator">
                        Go to FTP Calculator
                    </Button>
                </div>
            </Card>

            <Card title="Climb Time Calculator">
                <p class="mt-1 text-xs text-slate-600">
                    Calculate how long it takes to climb a hill based on watts, total weight, distance,
                    and gradient. Great for "what if I lose 3 kg or gain 20 W?".
                </p>
                <div class="mt-4">
                    <Button href="/tools/climb-time" variant="ghost">
                        Calculate climb time
                    </Button>
                </div>
            </Card>

            <Card title="Watts â†’ Speed">
                <p class="mt-1 text-xs text-slate-600">
                    Estimate speed on flat ground based on watts, CdA, rolling resistance, and total weight. Gives a
                    realistic picture of how fast you can ride on good asphalt.
                </p>
                <div class="mt-4">
                    <Button href="/tools/watts-to-speed" variant="ghost">
                        Calculate speed
                    </Button>
                </div>
            </Card>

            <Card title="Nutrition Calculator">
                <p class="mt-1 text-xs text-slate-600">
                    Suggests how many carbs you should consume per hour based on intensity and duration. Simple
                    tool to avoid bonking on long rides.
                </p>
                <div class="mt-4">
                    <Button href="/tools/nutrition" variant="ghost">
                        Calculate carb needs
                    </Button>
                </div>
            </Card>
        </div>
    </Section>
</BaseLayout>