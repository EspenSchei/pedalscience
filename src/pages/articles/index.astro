---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Button from "../../components/Button.astro";

const title = "Cycling Science Articles";
const description =
    "Conversational, evidence-based articles on cycling training science. Short reads that translate research into practical takeaways.";

// Get all markdown articles in this folder
const rawArticles = await Astro.glob("./*.md");

const WORDS_PER_MINUTE = 220;

// Priority (low number = show first)
const getPriority = (url: string) => {
    switch (url) {
        case "/articles/what-is-ftp":
            return 1;
        case "/articles/vo2max-cycling":
            return 2;
        case "/articles/polarized-vs-pyramidal":
            return 3;
        default:
            return 99;
    }
};

// Difficulty order for sorting
const difficultyOrder = (difficulty?: string) => {
    switch ((difficulty ?? "").toLowerCase()) {
        case "beginner":
            return 1;
        case "intermediate":
            return 2;
        case "advanced":
            return 3;
        default:
            return 2;
    }
};

// Color schemes based on difficulty
const getDifficultyColor = (difficulty?: string) => {
    switch ((difficulty ?? "").toLowerCase()) {
        case "beginner":
            return { bg: "from-emerald-500 to-emerald-600", shadow: "shadow-emerald-500/30", border: "hover:border-emerald-200", text: "text-emerald-600", light: "from-emerald-100 to-emerald-200" };
        case "intermediate":
            return { bg: "from-sky-500 to-sky-600", shadow: "shadow-sky-500/30", border: "hover:border-sky-200", text: "text-sky-600", light: "from-sky-100 to-sky-200" };
        case "advanced":
            return { bg: "from-orange-500 to-orange-600", shadow: "shadow-orange-500/30", border: "hover:border-orange-200", text: "text-orange-600", light: "from-orange-100 to-orange-200" };
        default:
            return { bg: "from-slate-500 to-slate-600", shadow: "shadow-slate-500/30", border: "hover:border-slate-300", text: "text-slate-600", light: "from-slate-100 to-slate-200" };
    }
};

// Build article meta
const articles = await Promise.all(
    rawArticles.map(async (mod) => {
        const frontmatter: any = mod.frontmatter ?? {};
        const html = (await mod.compiledContent?.()) ?? "";
        const text = html.replace(/<[^>]+>/g, " ");
        const words = text.split(/\s+/).filter(Boolean).length;
        const readingMinutes = words
            ? Math.max(1, Math.round(words / WORDS_PER_MINUTE))
            : undefined;

        const tags: string[] = frontmatter.tags ?? [];
        const difficulty: string | undefined = frontmatter.difficulty;
        const updated: string | undefined = frontmatter.updated;

        let updatedLabel: string | undefined = undefined;
        if (updated) {
            const d = new Date(updated);
            if (!Number.isNaN(d.getTime())) {
                updatedLabel = d.toLocaleDateString("en-US", {
                    day: "numeric",
                    month: "long",
                    year: "numeric",
                });
            }
        }

        const colors = getDifficultyColor(difficulty);

        return {
            url: mod.url,
            title: frontmatter.title ?? "Untitled",
            description: frontmatter.description ?? "Read the article",
            tags,
            difficulty,
            updated,
            updatedLabel,
            readingMinutes,
            colors,
            priority: getPriority(mod.url),
        };
    })
);

// Sort articles
articles.sort((a, b) => {
    if (a.priority !== b.priority) return a.priority - b.priority;
    if (a.priority === 99 && b.priority === 99) {
        const da = a.updated ? new Date(a.updated).getTime() : 0;
        const db = b.updated ? new Date(b.updated).getTime() : 0;
        if (da !== db) return db - da;
    }
    const da = difficultyOrder(a.difficulty);
    const db = difficultyOrder(b.difficulty);
    if (da !== db) return da - db;
    return a.title.localeCompare(b.title, "en");
});
---

<BaseLayout {title} {description}>
    <!-- Hero Section -->
    <header class="relative mb-12 overflow-hidden rounded-3xl bg-gradient-to-br from-amber-500 via-yellow-500 to-amber-700 p-8 text-slate-900 shadow-xl sm:p-12">
        <div class="absolute inset-0 opacity-10">
            <svg class="h-full w-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                <defs>
                    <pattern id="waves" width="20" height="20" patternUnits="userSpaceOnUse">
                        <path d="M0 10 Q5 5, 10 10 T20 10" fill="none" stroke="white" stroke-width="0.5"/>
                    </pattern>
                </defs>
                <rect width="100" height="100" fill="url(#waves)" />
            </svg>
        </div>
        <div class="absolute -right-20 -top-20 h-64 w-64 rounded-full bg-white/10 blur-3xl"></div>
        <div class="absolute -bottom-32 -left-32 h-80 w-80 rounded-full bg-emerald-400/20 blur-3xl"></div>

        <div class="relative">
            <div class="inline-flex items-center gap-2 rounded-full bg-white/20 px-3 py-1 text-xs font-medium backdrop-blur-sm">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
                {articles.length} Articles
            </div>

            <h1 class="mt-4 text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl">
                Cycling Science Articles
            </h1>
            <p class="mt-4 max-w-2xl text-lg text-amber-100">
                Short, science-backed reads that translate research into practical training takeaways.
                Built for curious riders who want to understand the why behind the workouts.
            </p>

            <div class="mt-6 flex flex-wrap gap-3 text-sm">
                <span class="inline-flex items-center gap-1.5 rounded-full bg-black/10 px-3 py-1 backdrop-blur-sm">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    Evidence-backed
                </span>
                <span class="inline-flex items-center gap-1.5 rounded-full bg-black/10 px-3 py-1 backdrop-blur-sm">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    3-4 minute reads
                </span>
                <span class="inline-flex items-center gap-1.5 rounded-full bg-black/10 px-3 py-1 backdrop-blur-sm">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 18a9 9 0 110-18 9 9 0 010 18z" /></svg>
                    Clear takeaways
                </span>
            </div>
        </div>
    </header>

    {articles.length > 0 ? (
        <>
            <!-- Featured Article (first one) -->
            {articles.length > 0 && (
                <a href={articles[0].url} class="group relative mb-8 block overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm transition-all hover:shadow-xl hover:-translate-y-1">
                    <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/5 to-teal-500/5"></div>
                    <div class="relative flex flex-col md:flex-row">
                        <div class="flex-1 p-6 sm:p-8">
                            <div class="flex items-center gap-3">
                                <span class={`inline-flex items-center gap-1 rounded-full bg-gradient-to-r ${articles[0].colors.bg} px-2.5 py-0.5 text-xs font-medium text-white`}>
                                    ‚≠ê Featured
                                </span>
                                {articles[0].difficulty && (
                                    <span class="rounded-full bg-slate-100 px-2.5 py-0.5 text-xs font-medium text-slate-600">
                                        {articles[0].difficulty.charAt(0).toUpperCase() + articles[0].difficulty.slice(1)}
                                    </span>
                                )}
                            </div>

                            <h2 class="mt-4 text-2xl font-bold text-slate-900 group-hover:text-emerald-600 transition-colors sm:text-3xl">
                                {articles[0].title}
                            </h2>

                            <p class="mt-3 text-sm text-slate-600 leading-relaxed">
                                {articles[0].description}
                            </p>

                            <div class="mt-4 flex flex-wrap gap-2">
                                {articles[0].tags.map((tag) => (
                                    <span class="rounded-full bg-slate-100 px-2.5 py-0.5 text-xs font-medium text-slate-600 dark:bg-slate-600 dark:text-white dark:border dark:border-slate-400/40">
                                        {tag}
                                    </span>
                                ))}
                            </div>

                            <div class="mt-6 flex items-center gap-4 text-xs text-slate-500">
                                {articles[0].readingMinutes && (
                                    <span class="flex items-center gap-1">
                                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        {articles[0].readingMinutes} min read
                                    </span>
                                )}
                                {articles[0].updatedLabel && (
                                    <span>Updated {articles[0].updatedLabel}</span>
                                )}
                            </div>
                        </div>

                        <div class={`flex items-center justify-center bg-gradient-to-br ${articles[0].colors.light} p-6 md:w-56`}>
                            <div class="text-6xl">üìö</div>
                        </div>
                    </div>
                </a>
            )}

            <!-- Article Grid -->
            <div class="grid gap-6 md:grid-cols-2">
                {articles.slice(1).map((article) => (
                    <a href={article.url} class={`group block rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:shadow-lg ${article.colors.border}`}>
                        <div class="flex items-center gap-3">
                            {article.difficulty && (
                                <span class={`inline-flex items-center gap-1 rounded-full bg-gradient-to-r ${article.colors.bg} px-2.5 py-0.5 text-xs font-medium text-white`}>
                                    {article.difficulty.charAt(0).toUpperCase() + article.difficulty.slice(1)}
                                </span>
                            )}
                            {article.readingMinutes && (
                                <span class="text-xs text-slate-500">{article.readingMinutes} min read</span>
                            )}
                        </div>

                        <h3 class="mt-3 text-lg font-semibold text-slate-900 group-hover:text-emerald-600 transition-colors">
                            {article.title}
                        </h3>

                        <p class="mt-2 text-sm text-slate-600 leading-relaxed">
                            {article.description}
                        </p>

                        <div class="mt-4 flex flex-wrap gap-2">
                            {article.tags.map((tag) => (
                                <span class="rounded-full bg-slate-100 px-2.5 py-0.5 text-xs font-medium text-slate-600 dark:bg-slate-600 dark:text-white dark:border dark:border-slate-400/40">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        {article.updatedLabel && (
                            <div class="mt-4 text-xs text-slate-500">
                                Updated {article.updatedLabel}
                            </div>
                        )}
                    </a>
                ))}
            </div>

            <!-- CTA Section -->
            <section class="mt-12 rounded-3xl bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-8 text-white">
                <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
                    <div>
                        <h2 class="text-2xl font-bold">Want more practical tools?</h2>
                        <p class="mt-2 text-slate-300">
                            Use the calculators to translate the science into your own training plan.
                        </p>
                    </div>
                    <Button href="/tools" variant="secondary">Explore tools ‚Üí</Button>
                </div>
            </section>
        </>
    ) : (
        <div class="rounded-2xl border border-slate-200 bg-white p-8 text-center text-slate-600">
            No articles yet. Check back soon.
        </div>
    )}
</BaseLayout>
