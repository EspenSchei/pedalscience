---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Button from "../../components/Button.astro";
import Card from "../../components/Card.astro";

const title = "FTP-kalkulator";
const description =
    "Beregn treningssoner i watt og prosent av FTP, samt W/kg, på noen sekunder.";
---

<BaseLayout {title} {description}>
    <header class="mb-6">
        <h1 class="text-2xl font-semibold tracking-tight text-slate-900 sm:text-3xl">
            FTP-kalkulator
        </h1>
        <p class="mt-2 max-w-2xl text-sm text-slate-600">
            Legg inn FTP i watt (eller resultatet fra en 20-minutters test), og få forslag til
            treningssoner basert på klassisk Coggan-modell. Du kan også legge inn vekt for å se W/kg.
        </p>
    </header>

    <div class="mt-4 grid gap-6 md:grid-cols-2">
        <div class="space-y-4">
            <div class="space-y-1 text-sm">
                <label for="ftpInput">FTP (watt)</label>
                <input
                        id="ftpInput"
                        type="number"
                        min="80"
                        max="600"
                        step="1"
                        value="250"
                        class="w-full"
                />
                <p class="form-help">
                    Hvis du bare har 20-minutters test: ta snittwatt × 0,95 og legg inn her.
                </p>
            </div>

            <div class="space-y-1 text-sm">
                <label for="weightInput">Vekt (kg) – valgfritt</label>
                <input
                        id="weightInput"
                        type="number"
                        min="40"
                        max="150"
                        step="0.1"
                        value="75"
                        class="w-full"
                />
                <p class="form-help">
                    Brukes kun til å regne ut W/kg. Hopper over hvis du lar feltet stå tomt.
                </p>
            </div>

            <div class="form-actions">
                <Button id="calcBtn" type="button" variant="primary">
                    Beregn soner
                </Button>
            </div>
        </div>

        <Card as="div" id="summaryBox" class="h-fit" title="Oppsummering">
            <p id="summaryText" class="mt-1 text-xs text-slate-600">
                Legg inn FTP (og gjerne vekt), og trykk «Beregn soner».
            </p>
        </Card>
    </div>

    <Card as="div" id="zonesBox" class="mt-6" title="Treningssoner (basert på FTP)">
        <div
                id="zonesGrid"
                class="mt-3 grid gap-2 text-xs text-slate-700 sm:grid-cols-2 lg:grid-cols-3"
        >
            <!-- fylles av JavaScript -->
        </div>
    </Card>

    <script type="module">
        const ftpInput = document.getElementById("ftpInput");
        const weightInput = document.getElementById("weightInput");
        const calcBtn = document.getElementById("calcBtn");
        const zonesGrid = document.getElementById("zonesGrid");
        const summaryText = document.getElementById("summaryText");

        function formatRange(min, max) {
            if (min === null) return `≤ ${Math.round(max)} W`;
            if (max === null) return `≥ ${Math.round(min)} W`;
            return `${Math.round(min)}–${Math.round(max)} W`;
        }

        function calcZones(ftp) {
            const pct = {
                z1: [0, 0.55],
                z2: [0.56, 0.75],
                z3: [0.76, 0.9],
                z4: [0.91, 1.05],
                z5: [1.06, 1.2],
                z6: [1.21, 1.5],
                z7: [1.51, 2.0],
            };

            return {
                z1: { name: "Sone 1 – Restitusjon", range: [null, pct.z1[1] * ftp] },
                z2: {
                    name: "Sone 2 – Rolig/langtur",
                    range: [pct.z2[0] * ftp, pct.z2[1] * ftp],
                },
                z3: { name: "Sone 3 – Tempo", range: [pct.z3[0] * ftp, pct.z3[1] * ftp] },
                z4: { name: "Sone 4 – Terskel", range: [pct.z4[0] * ftp, pct.z4[1] * ftp] },
                z5: { name: "Sone 5 – VO₂max", range: [pct.z5[0] * ftp, pct.z5[1] * ftp] },
                z6: { name: "Sone 6 – Anaerob", range: [pct.z6[0] * ftp, pct.z6[1] * ftp] },
                z7: {
                    name: "Sone 7 – Sprint/neuromuskulær",
                    range: [pct.z7[0] * ftp, null],
                },
            };
        }

        function renderZones(ftp) {
            const zones = calcZones(ftp);
            zonesGrid.innerHTML = "";

            Object.values(zones).forEach((zone) => {
                const div = document.createElement("div");
                div.className =
                    "rounded-xl border border-slate-200 bg-white px-3 py-2 shadow-sm";

                const [min, max] = zone.range;

                const pctText =
                    min === null && max != null
                        ? `0–${Math.round((max / ftp) * 100)} %`
                        : max === null && min != null
                            ? `≥ ${Math.round((min / ftp) * 100)} %`
                            : `${Math.round((min / ftp) * 100)}–${Math.round(
                                (max / ftp) * 100,
                            )} %`;

                div.innerHTML = `
          <div class="font-semibold text-slate-900">${zone.name}</div>
          <div class="text-slate-800">${formatRange(min, max)}</div>
          <div class="text-[0.7rem] text-slate-500">${pctText} av FTP</div>
        `;
                zonesGrid.appendChild(div);
            });
        }

        function handleCalc() {
            const ftp = Number(ftpInput.value);
            const weightVal = weightInput.value.trim();
            const weight = weightVal === "" ? null : Number(weightVal);

            if (!ftp || ftp <= 0) {
                summaryText.textContent = "Legg inn en gyldig FTP-verdi i watt.";
                zonesGrid.innerHTML = "";
                return;
            }

            let summary = `FTP: ${ftp} W`;
            if (weight && weight > 0) {
                const wkg = ftp / weight;
                summary += ` (${wkg.toFixed(2)} W/kg ved ${weight.toFixed(1)} kg)`;
            }

            summaryText.textContent = summary;
            renderZones(ftp);
        }

        calcBtn.addEventListener("click", handleCalc);
        handleCalc();
    </script>
</BaseLayout>