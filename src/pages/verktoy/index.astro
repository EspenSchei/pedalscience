---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";
import Button from "../../components/Button.astro";
import Section from "../../components/Section.astro";

const title = "Verktøy";
const description =
    "Praktiske kalkulatorer for landeveis-mosjonister. Start med FTP, og bruk de andre verktøyene til å planlegge klatringer, fart og ernæring.";
---

<BaseLayout {title} {description}>
    <header class="mb-8">
        <h1 class="text-3xl font-semibold tracking-tight text-slate-900 sm:text-4xl">
            Sykkelverktøy
        </h1>
        <p class="mt-3 max-w-2xl text-sm text-slate-600">
            Praktiske kalkulatorer for landeveis-mosjonister. Start med FTP, og bruk de andre
            verktøyene til å planlegge klatringer, fart og ernæring.
        </p>
    </header>

    <Section title="Kalkulatorer">
        <div class="grid gap-4 md:grid-cols-2">
            <Card title="FTP-kalkulator">
                <p class="mt-1 text-xs text-slate-600">
                    Legg inn FTP og få treningssoner i watt og prosent. Perfekt utgangspunkt for
                    strukturert trening.
                </p>
                <div class="mt-4">
                    <Button href="/verktoy/ftp-kalkulator">
                        Gå til FTP-kalkulator
                    </Button>
                </div>
            </Card>

            <Card title="Klatretids-kalkulator">
                <p class="mt-1 text-xs text-slate-600">
                    Beregn hvor lang tid du bruker opp en bakke basert på watt, totalvekt, lengde
                    og stigning. Fin til “hva hvis jeg går ned 3 kg eller opp 20 W?”.
                </p>
                <div class="mt-4">
                    <Button href="/verktoy/klatretid" variant="ghost">
                        Beregn klatretid
                    </Button>
                </div>
            </Card>

            <Card title="Watt → hastighet">
                <p class="mt-1 text-xs text-slate-600">
                    Estimer fart på flatmark basert på watt, CdA, rullemotstand og totalvekt. Gir et
                    realistisk bilde av hvor raskt du kan sykle på god asfalt.
                </p>
                <div class="mt-4">
                    <Button href="/verktoy/watt-til-hastighet" variant="ghost">
                        Beregn fart
                    </Button>
                </div>
            </Card>

            <Card title="Ernærings-kalkulator">
                <p class="mt-1 text-xs text-slate-600">
                    Foreslår hvor mye karbo du bør ta per time ut fra intensitet og varighet. Enkelt
                    verktøy for å unngå å gå tom på lange turer.
                </p>
                <div class="mt-4">
                    <Button href="/verktoy/ernaering" variant="ghost">
                        Beregn karbopr behov
                    </Button>
                </div>
            </Card>
        </div>
    </Section>
</BaseLayout>